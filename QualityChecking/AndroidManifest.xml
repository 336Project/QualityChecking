<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ateam.qc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.ateam.qc.application.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ateam.qc.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ateam.qc.activity.SetActivity"
            android:label="@string/title_activity_set"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="com.ateam.qc.activity.HistoryActivity"
            android:label="@string/title_activity_history"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="com.ateam.qc.activity.SettingGroupActivity"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="com.ateam.qc.activity.SettingProjectActivity"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="com.ateam.qc.activity.SettingBadnessActivity"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
			android:name="com.ateam.qc.activity.SettingSizeActivity"
			android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >        </activity>
        <activity
            android:name="com.ateam.qc.image.ImagePagerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="com.ateam.qc.activity.HistoryDetailActivity"
            android:screenOrientation="landscape"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="com.ateam.qc.activity.ExportByTimeActivity"
            android:screenOrientation="landscape"
            android:theme="@style/CustomDialog" >
        </activity>
    </application>

</manifest>
